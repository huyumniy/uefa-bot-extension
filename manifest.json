{
  "manifest_version": 3,
  "name": "uefa extension",
  "version": "1.0.0",
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tickets.uefa.com/secured/selection/resale/*",
        "*://*.tickets.uefa.com/list/events"
        ],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },

  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}